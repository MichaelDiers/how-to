<Window x:Class="HowToWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:watermark="clr-namespace:HowToWpf.Watermark"
        xmlns:notifyDataErrorInfo="clr-namespace:HowToWpf.NotifyDataErrorInfo"
        xmlns:commands="clr-namespace:HowToWpf.Commands"
        Title="MainWindow" 
        WindowState="Maximized">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <watermark:WatermarkHowTo
                Grid.Row="0"
                Grid.Column="1"/>
            <notifyDataErrorInfo:NotifyDataErrorInfoView
                Grid.Row="1"
                Grid.Column="1"/>
            <commands:CommandsView
                Grid.Row="2"
                Grid.Column="1"/>
        </Grid>
    </ScrollViewer>
</Window>
