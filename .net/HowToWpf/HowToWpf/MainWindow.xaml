<Window
    x:Class="HowToWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:watermark="clr-namespace:HowToWpf.Watermark"
    xmlns:notifyDataErrorInfo="clr-namespace:HowToWpf.NotifyDataErrorInfo"
    xmlns:commands="clr-namespace:HowToWpf.Commands"
    Title="MainWindow"
    WindowState="Maximized">
    <ScrollViewer>
        <TabControl>
            <TabItem
                Header="Watermark">
                <watermark:WatermarkHowTo />
            </TabItem>
            <TabItem
                Header="INotifyDataErrorInfo">
                <notifyDataErrorInfo:NotifyDataErrorInfoView />
            </TabItem>
            <TabItem
                Header="Commands">
                <commands:CommandsView />
            </TabItem>
        </TabControl>
    </ScrollViewer>
</Window>
