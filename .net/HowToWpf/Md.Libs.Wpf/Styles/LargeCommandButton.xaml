<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:commandButton="clr-namespace:Md.Libs.Wpf.DependencyProperties.CommandButton">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseCommandButtonStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="Button" x:Key="LargeCommandButtonStyle" BasedOn="{StaticResource BaseCommandButtonStyle}">
        <Style.Setters>
            <Setter Property="Height" Value="96"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalAlignment}">
                            <StackPanel Orientation="Horizontal">
                                <Image 
                                    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                    Margin="0"
                                    VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                    Source="{Binding RelativeSource={RelativeSource AncestorType=Button, Mode=FindAncestor},Path=(commandButton:LargeCommandButtonImageDependencyProperty.Image)}"
                                    ToolTip="{TemplateBinding ToolTip}"/>
                                <TextBlock Margin="0" Text="{TemplateBinding Content}"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>