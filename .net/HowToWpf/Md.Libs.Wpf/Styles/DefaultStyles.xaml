<!-- Default styles for controls. -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DefaultValues.xaml"/>
        <ResourceDictionary Source="ValidationErrorTemplate.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Control" x:Key="DefaultControlStyle">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource DefaultFontWeight}"/>
        <Setter Property="Margin" Value="{StaticResource DefaultMargin}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultPadding}"/>
    </Style>

    <Style TargetType="Button" x:Key="DefaultButtonStyle" BasedOn="{StaticResource DefaultControlStyle}"/>
    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}"/>

    <Style TargetType="ComboBox" x:Key="DefaultComboBoxStyle" BasedOn="{StaticResource DefaultControlStyle}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBoxStyle}">
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationErrorTemplate}"/>
    </Style>

    <Style TargetType="Expander" x:Key="DefaultExpanderStyle" BasedOn="{StaticResource DefaultControlStyle}"/>
    <Style TargetType="Expander" BasedOn="{StaticResource DefaultExpanderStyle}"/>

    <Style TargetType="Label" x:Key="DefaultLabelStyle" BasedOn="{StaticResource DefaultControlStyle}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style TargetType="Label" BasedOn="{StaticResource DefaultLabelStyle}"/>

    <Style TargetType="PasswordBox" x:Key="DefaultPasswordBoxStyle" BasedOn="{StaticResource DefaultControlStyle}">
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationErrorTemplate}"/>
    </Style>
    <Style TargetType="PasswordBox" BasedOn="{StaticResource DefaultPasswordBoxStyle}"/>

    <Style TargetType="ScrollViewer" x:Key="DefaultScrollViewerStyle">
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>
    <Style TargetType="ScrollViewer" BasedOn="{StaticResource DefaultScrollViewerStyle}"/>

    <Style TargetType="TextBlock" x:Key="DefaultTextBlockStyle">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource DefaultFontWeight}"/>
        <Setter Property="Margin" Value="{StaticResource DefaultMargin}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultPadding}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlockStyle}"/>

    <Style TargetType="TextBox" x:Key="DefaultTextBoxStyle" BasedOn="{StaticResource DefaultControlStyle}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationErrorTemplate}"/>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}"/>

    <Style TargetType="Window" x:Key="DefaultWindowStyle" BasedOn="{StaticResource DefaultControlStyle}"/>
    <Style TargetType="Window" BasedOn="{StaticResource DefaultWindowStyle}"/>
</ResourceDictionary>