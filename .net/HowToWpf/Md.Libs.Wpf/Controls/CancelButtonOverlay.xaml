<UserControl
    x:Class="Md.Libs.Wpf.Controls.CancelButtonOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Md.Libs.Wpf.Controls"
    xmlns:dependencyProperties="clr-namespace:Md.Libs.Wpf.DependencyProperties">
    <UserControl.Resources>
        <ResourceDictionary
            Source="../Styles/CommandButtonStyle.xaml" />
    </UserControl.Resources>
    <UserControl.Style>
        <Style
            TargetType="controls:CancelButtonOverlay">
            <Setter
                Property="Background"
                Value="#80000000" />
            <Setter
                Property="HorizontalAlignment"
                Value="Stretch" />
            <Setter
                Property="Panel.ZIndex"
                Value="1000" />
            <Setter
                Property="VerticalAlignment"
                Value="Stretch" />
            <Setter
                Property="Visibility"
                Value="Visible" />
            <Style.Triggers>
                <DataTrigger
                    Binding="{Binding RelativeSource={RelativeSource Self}, Path=CancelCommand}"
                    Value="{x:Null}">
                    <Setter
                        Property="Visibility"
                        Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <Button
        Command="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType=controls:CancelButtonOverlay}, Path=(CancelCommand)}"
        dependencyProperties:ImageDependencyProperty.Image="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=controls:CancelButtonOverlay}, Path=Image}">
        <Button.Style>
            <Style
                TargetType="Button"
                BasedOn="{StaticResource CommandButtonStyle}">
                <Setter
                    Property="Content"
                    Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=controls:CancelButtonOverlay}, Path=CommandText}" />
            </Style>
        </Button.Style>
    </Button>
</UserControl>
